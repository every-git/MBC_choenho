<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo2.mapper.MemberMapper">

    <insert id="insert" parameterType="MemberDTO">
        INSERT INTO member2 (name, age, address, phone)
        VALUES (#{name}, #{age}, #{address}, #{phone})
    </insert>

    <select id="findById" parameterType="int" resultType="MemberDTO">
        SELECT * FROM member2 WHERE member_id = #{memberId}
    </select>

    <select id="findAll" resultType="MemberDTO">
        SELECT * FROM member2
    </select>

    <update id="update" parameterType="MemberDTO">
        UPDATE member2 SET name = #{name}, age = #{age}, address = #{address}, phone = #{phone} WHERE member_id = #{memberId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM member2 WHERE member_id = #{memberId}
    </delete>

</mapper>